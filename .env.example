# ==================== Database ====================
DATABASE_URL=postgresql://litex:password@localhost:5432/litex

# ==================== Auth.js ====================
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-min-32-chars-here
NEXTAUTH_URL=http://localhost:3000

# ==================== SMTP (for magic links) ====================
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@litex.at
SMTP_PASS=your-app-password
EMAIL_FROM="Litex <noreply@litex.at>"

# ==================== S3/MinIO ====================
# For local development
S3_ENDPOINT=http://localhost:9000
S3_REGION=eu-central-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123

# Main bucket for user file uploads
S3_BUCKET=kommunikation-uploads

# Import bucket for BMD CSV imports (cron job)
S3_IMPORT_BUCKET=kommunikation-imports

# ==================== Cron Security ====================
# Generate with: openssl rand -hex 32
CRON_SECRET=your-cron-secret-min-32-chars

